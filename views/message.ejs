    /* Floating Hearts */
    .heart {
      position: absolute;
      width: 20px;
      height: 20px;
      background-color: pink;
      animation: floatHearts 10s linear infinite;
      transform: rotate(45deg);
      opacity: 0.8;
    }

    .heart::before,
    .heart::after {
      content: "";
      position: absolute;
      width: 20px;
      height: 20px;
      background-color: pink;
      border-radius: 50%;
    }

    .heart::before {
      top: -10px;
      left: 0;
    }

    .heart::after {
      left: -10px;
      top: 0;
    }

    @keyframes floatHearts {
      0% {
        bottom: -10%;
        left: calc(50% + (var(--x) * 1px));
        opacity: 1;
      }
      100% {
        bottom: 110%;
        left: calc(50% + (var(--xEnd) * 1px));
        opacity: 0;
      }
    }

    /* Sparkles */
    .sparkle {
      position: fixed;
      width: 6px;
      height: 6px;
      background: white;
      border-radius: 50%;
      box-shadow: 0 0 6px white;
      animation: sparkleMove 4s infinite ease-in-out;
    }

    @keyframes sparkleMove {
      from {
        transform: translateY(0) scale(1);
        opacity: 1;
      }
      to {
        transform: translateY(-100vh) scale(0.5);
        opacity: 0;
      }
    }

