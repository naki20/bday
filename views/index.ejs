<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Chester's Birthday Countdown</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.4.0/dist/confetti.browser.min.js"></script>
  <style>
    body {
      margin: 0;
      padding: 0;
      height: 100vh;
      background: linear-gradient(45deg, #000000, #000000);
      background-size: 400% 400%;
      animation: gradientAnimation 10s ease infinite;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: 'Roboto', sans-serif;
      color: #fff;
      overflow: hidden;
    }

    .container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 60px 80px;
  border: 8px solid #fff;
  border-radius: 30px;
  background: rgba(0, 0, 0, 0);
  opacity: 0;
  animation: fadeInContainer 4s ease-out forwards;
  max-width: 90%;
  width: 700px;
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
  position: absolute;
  top: 5%;
  left: 50%;
  transform: translateX(-50%);
}
    h1 {
      font-size: 3.5rem;
      color: #fff;
      text-shadow: 0 0 15px rgba(255, 255, 255, 0.5), 0 0 30px rgba(255, 255, 255, 0.3);
      margin-bottom: 25px;
      opacity: 0.9;
      animation: fadeInText 4s ease-out forwards;
      text-align: center;
    }

    #special-day-message {
  font-size: 3rem; /* or whatever size "The countdown begins" is */
  font-weight: 600;
  color: #fff;
  text-align: center;
  letter-spacing: 2px;
}

    #countdown {
      font-size: 4rem;
      font-weight: 500;
      color: #fff;
      text-align: center;
      min-height: 150px; /* or whatever is suitable */
      letter-spacing: 2px;
      text-shadow: 0 0 25px rgba(97, 89, 89, 0.6), 0 0 40px rgba(255, 255, 255, 0.4);
      opacity: 0;
      
      animation: countdownAnimation 2s ease-out 3s forwards, popInOut 1.5s infinite;
    }

    

    .sparkle {
      position: absolute;
      width: 3px;
      height: 3px;
      background: white;
      border-radius: 50%;
      box-shadow: 0 0 6px #fff;
      animation: twinkle 5s infinite ease-in-out;
      opacity: 0.8;
    }
 
















.shooting-star {
  position: absolute;
  top: -600px; /* Start off-screen at the top */
  left: -100px;
  width: 120px;
  height: 2px;
  background: linear-gradient(90deg, white, transparent);
  opacity: 1;
  transform: rotate(45deg);
  animation: shoot-diagonal 5s linear forwards;
  z-index: 3;
}


@keyframes shoot-diagonal {
  0% {
    transform: translate(0, 0) rotate(45deg);
    opacity: 1;
  }
  100% {
    transform: translate(800px, 1000px) rotate(45deg); /* move to bottom right */
    opacity: 0;
  }
}


.star {
  position: absolute;
  width: 6px;
  height: 6px;
  background: white;
  border-radius: 50%;
  box-shadow: 0 0 8px #fff;
  animation: twinkle 6s infinite ease-in-out;
  z-index: 0;
}
.photo {
  position: absolute;
  bottom: 2px;       /* Adjust as per your need */
  left: 50%;
  transform: translateX(-50%);
  width: 500px;       /* Adjust image size */
  height: auto;
  z-index: -1;        /* To ensure it's behind other content */
}


    @keyframes twinkle {
      0%, 100% { opacity: 0.2; transform: scale(1); }
      50% { opacity: 1; transform: scale(1.5); }
    }

    @keyframes fadeInContainer {
      0% { opacity: 0; }
      100% { opacity: 1; }
    }

    @keyframes fadeInText {
      0% { opacity: 1; }
      80% { opacity: 0; }
      100% { opacity: 0; }
    }

    @keyframes countdownAnimation {
      0% { transform: scale(0.8); opacity: 0; }
      50% { transform: scale(1.1); opacity: 1; }
      100% { transform: scale(1); opacity: 1; }
    }

    @keyframes popInOut {
      0% { transform: scale(1); }
      50% { transform: scale(1.2); }
      100% { transform: scale(1); }
    }

    @keyframes gradientAnimation {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    @media (max-width: 768px) {
      h1 {
        font-size: 2.5rem;
      }

      
/* Media Query for smaller screens */
@media (max-width: 768px) {
  .container {
    width: 90%; /* Adjust the width to 90% of the screen */
    padding: 20px; /* Reduce padding for smaller screens */
    border-radius: 15px; /* Adjust border radius */
  }
}
@media (max-width: 480px) {
  .container {
    width: 95%; /* Further adjust for very small screens */
    padding: 15px;
  }
}
    }
  </style>
</head>
<body>
  <canvas id="confetti-canvas"></canvas>
  <img src="images/meyou.jpeg" alt="Birthday Image" class="photo" />

  <div class="container" id="countdownContainer">
    <h1 id="countdownMessage">The Countdown begins...</h1>
    
    <div id="countdown"></div>
    <div id="special-day-message" style="display: none;"></div>
  </div>
  

  <script>
    // ðŸŒŸ Create twinkling sparkles
    for (let i = 0; i < 30; i++) {
      const sparkle = document.createElement('div');
      sparkle.className = 'sparkle';
      sparkle.style.left = Math.random() * 100 + 'vw';
      sparkle.style.top = Math.random() * 100 + 'vh';
      sparkle.style.animationDelay = `${Math.random() * 5}s`;
      document.body.appendChild(sparkle);
    }
  
    // âœ¨ Add stars
    for (let i = 0; i < 40; i++) {
      const star = document.createElement('div');
      star.className = 'star';
      star.style.left = Math.random() * 100 + 'vw';
      star.style.top = Math.random() * 100 + 'vh';
      star.style.animationDelay = `${Math.random() * 6}s`;
      star.style.opacity = Math.random();
      document.body.appendChild(star);
    }
    // Add random shooting stars
    function createShootingStar() {
  const shootingStar = document.createElement('div');
  shootingStar.className = 'shooting-star';
  
  // Randomize the initial position
  shootingStar.style.top = `${Math.random() * -200}px`;
  shootingStar.style.left = `${Math.random() * 100}vw`;

  // Append to the body
  document.body.appendChild(shootingStar);

  // Remove the shooting star after animation ends to clean up the DOM
  setTimeout(() => {
    shootingStar.remove();
  }, 5000); // Matches the duration of the animation
}

// Create a shooting star every 1.5 seconds
setInterval(createShootingStar, 3000);


  
    const countdownEl = document.getElementById("countdown");
    const countdownMessage = document.getElementById("countdownMessage");
    const countdownContainer = document.getElementById("countdownContainer");
    const specialMessage = document.getElementById("special-day-message");
  
    const birthday = new Date(2025, 3, 20, 0, 16, 0).getTime(); // 19 April 2025, 17:29
  
    // Check immediately if the special day has already passed
    const now = new Date().getTime();
    if (now >= birthday) {
      countdownContainer.style.display = 'none';
      showLoadingStatus();
      setTimeout(() => window.location.href = "message", 2000);
    } else {
      const x = setInterval(() => {
        const now = new Date().getTime();
        const distance = birthday - now;
  
        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);
  
        countdownEl.innerHTML = `${days}d ${hours}h ${minutes}m ${seconds}s`;
  
        if (distance <= 0) {
          clearInterval(x);
          countdownEl.style.display = 'none';
          specialMessage.innerText = " A special day has arrived âˆ©ËƒoË‚âˆ©â™¡!";
          specialMessage.style.display = "block";
          launchConfetti();
  
          setTimeout(() => {
            showLoadingStatus();
            setTimeout(() => window.location.href = "message", 2000);
          }, 3000);
        }
      }, 1000);
    }
  
    // ðŸŽ‰ Confetti Launcher
    function launchConfetti() {
      const duration = 3 * 1000;
      const animationEnd = Date.now() + duration;
      const defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 2000 };
  
      function randomInRange(min, max) {
        return Math.random() * (max - min) + min;
      }
  
      const interval = setInterval(() => {
        const timeLeft = animationEnd - Date.now();
  
        if (timeLeft <= 0) {
          return clearInterval(interval);
        }
  
        const particleCount = 50 * (timeLeft / duration);
        confetti(Object.assign({}, defaults, {
          particleCount,
          origin: { x: randomInRange(0.1, 0.3), y: Math.random() - 0.2 }
        }));
        confetti(Object.assign({}, defaults, {
          particleCount,
          origin: { x: randomInRange(0.7, 0.9), y: Math.random() - 0.2 }
        }));
      }, 250);
    }
  
    // â³ Loading Status Function
    function showLoadingStatus() {
      const loadingDiv = document.createElement('div');
      loadingDiv.innerText = "Loading....";
      loadingDiv.style.position = "fixed";
      loadingDiv.style.top = "50%";
      loadingDiv.style.left = "50%";
      loadingDiv.style.transform = "translate(-50%, -50%)";
      loadingDiv.style.fontSize = "2.5rem";
      loadingDiv.style.color = "#fff";
      loadingDiv.style.zIndex = "9999";
      loadingDiv.style.fontWeight = "bold";
      loadingDiv.style.background = "rgba(0,0,0,0.7)";
      loadingDiv.style.padding = "20px 40px";
      loadingDiv.style.borderRadius = "15px";
      document.body.appendChild(loadingDiv);
    }
  </script>
  







